---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="overflow-x-hidden">
    <slot />

    <!-- bottom circles - animated -->
    <div class="bottom-circles">
      <img
        id="bottom-circle-solid"
        src="/ball-circle-solid.svg"
        alt="bottom-circle"
        class="animate-spin-slow"
      />
      <img
        id="bottom-circle-dashed"
        src="/ball-circle-dashed.svg"
        alt="bottom-circle"
        class="animate-spin-slow"
      />
    </div>
    
    <!-- Scroll into view script -->
    <script>
      const projectsBtn = document.getElementById("projects-btn");
      const skillsBtn = document.getElementById("skills-btn");
    
      projectsBtn.addEventListener('click', () => {
        document.getElementById('projects-section').scrollIntoView({
          behavior: "smooth"
        });
      });
      skillsBtn.addEventListener('click', () => {
        document.getElementById('skills-section').scrollIntoView({
          behavior: "smooth"
        });
      });
    </script>
  </body>
</html>

<!-- Global styles -->
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&family=League+Spartan:wght@100..900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap");

  :root {
    --Atkinson: [ "Atkinson Hyperlegible", "sans-serif"];
    --League: [ "League Spartan", "sans-serif"];
    --Roboto: "Roboto Condensed", "sans-serif";
    --primary-light: #fff;
    --primary-dark: #13152c;
    --Blue: #97d5ff;
    --Pink: #ff95e9;
    --Red: #ffb5b5;
  }

  body::before {
    content: "";
    background: url(/bg-mobile.jpg) no-repeat center center/cover;
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -100;
  }

  body {
    background-color: #0f0f0f;
    position: relative;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
  }

  .bottom-circles {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1;
  }

  #bottom-circle-dashed {
    width: 200px;
    position: absolute;
    top: calc(100vh - 100px);
    left: calc(100vw - 100px);
    z-index: -10;
  }
  #bottom-circle-solid {
    width: 300px;
    position: absolute;
    top: calc(100vh - 150px);
    left: calc(100vw - 150px);
    z-index: -10;
  }

  @media (min-width: 767px) {
    body::before {
      background: url(/551.jpg) no-repeat center center/cover;
    }

    #bottom-circle-dashed {
      width: 350px;
      position: absolute;
      top: calc(100vh - 175px);
      left: calc(100vw - 175px);
      z-index: -10;
    }
    #bottom-circle-solid {
      width: 500px;
      position: absolute;
      top: calc(100vh - 250px);
      left: calc(100vw - 250px);
      z-index: -10;
    }
  }
</style>
